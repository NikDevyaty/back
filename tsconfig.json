{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",

    "moduleResolution": "node",
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,

    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
